<h2>Add a Country</h2>

<form action="/countries/create" method="post">
<div>
  <label for="name">Name:</label>
  <input type="text" name="name" id="name">
</div>

<div>
  <label for="rating">Rating:</label>
  <input type="number" name="rating" id="rating">
</div>

<div>
  <label for="cities">Cities:</label>
  <input type="array" name="cities" id="cities">
</div>


<div>
  <label for="funFacts">Fun Facts:</label>
  <input type="text" name="funFacts" id="funFacts">
</div>

<div>
  <label for="description">Description:</label>
  <input type="text" name="description" id="description">
</div>


  <button type="submit" class="btn">Create Country</button>
</form>