<div class="video-wrapper">
      <video autoplay muted loop class="bg-video">
        <source src="/images/globeweb.webm" type="video/webm"></src>
      </video>
</div>
<section class="signup">
  <div id="form">
    <form class ="signup-form" action="/signup" method="POST">
      
      <label class="login-signup-text">
        <input style="text-align:center" type="email" name="email" placeholder="Your email" />
      </label>

      <label class="login-signup-text">
        <input style="text-align:center" type="text" name="username" placeholder="Your username" />
      </label>

      <label class="login-signup-text">
        <input style="text-align:center" type="password" name="password" placeholder="Your password" />
      </label>

      <button class="login-signup-btns" type="submit">Sign Up</button>


      {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
      {{/if}}
    </form>
  </div>
</section>