<h2 class="profile-title">Welcome {{foundUser.username}}!</h2>
<section>
    <div class="profile-info">
        <img class="profile-picture" src="../../images/fotoTomas.jpeg">
        <p class="user-info">FirstName LastName{{foundUser.firstName}} {{foundUser.lastName}}</p>
        <p class="user-info">From: {{foundUser.nationality}}</p>
        <p class="user-info">Age: {{foundUser.age}}</p>
        <a class="profile-btns" href="/add-visited">Add visited countries</a>
        <p></p>
        <a class="profile-btns" href="/edit-profile">Edit Profile</a>
    </div>
    <div class="visited-display">
        <section class="info-cards">
            {{#each countries}}
                <div class="display-cards">
                    <div class="card" style="width: 18rem;">
                        <img src="{{this.flags.png}}" class="card-img-top flag-border" alt="Image of flag couldn't be loaded">
                        <div class="card-body">
                            <p class="card-text card-name">{{this.name.common}}</p>
                            <p class="card-text">{{this.continents}}</p>
                            <p class="card-text">Population: {{this.population}}</p>
                            <p class="card-text">Capital: {{this.capital}}</p>
                            {{#each currencies}}
                            <p class="card-text">Currency Name: {{this.name}} {{this.symbol}}</p>
                            {{/each}}
                        </div>
                    </div>
                </div>
            {{/each}}
</section>
    </div>
</section>